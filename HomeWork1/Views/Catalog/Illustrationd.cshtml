
@model HomeWork1.ViewModels.PaginationList<HomeWork1.ViewModels.CatalogArtItem>;

	<table class="table">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                First Name
            </th>
            <th>

            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PictureUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>@*
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>

<a 
asp-controller="Catalog"
asp-action="Pagination"
   asp-route-page="@(Model.PageIndex - 1)"
   class="btn btn-default @Model.P">
    Previous
</a>
<a
asp-controller="Catalog"
asp-action="Pagination"
   asp-route-page="@(Model.PageIndex + 1)"
   class="btn btn-default @Model.NextPage">
    Next
</a>
