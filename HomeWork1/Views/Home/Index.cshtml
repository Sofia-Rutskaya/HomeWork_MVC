@model HomeItems;

@{
    ViewData["Title"] = "Home Page";   
}

<style>
.Blocks {
  position: relative;
  width: 100%;
}

.text-center {
  position: relative;
  text-align: center;
}

.image {
  display: block;
  width: 100%;
  height: auto;
  margin-left: auto;
  margin-right: auto
}

.main-text{
  font-size: 25px;
  position: absolute;
  top: 15%;
  font-family: sans-serif;
  left: 40%;/*
  -webkit-transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  transform: translate(-50%, -50%);*/
  text-align: left;
  opacity: 1;
}
.overlay{
    position: absolute;
    width: 100%;
    height: 100%;
    top: 30%;
    left: 45%;
    opacity: 1;
        text-align: justify;
    font-family: sans-serif;
    margin: 0 auto 0 auto;
    padding: 15px;
}

.text {
  color: white;
  font-size: 20px;
  position: absolute;
  top: 100%;
  left: 100%;
  text-align: center;
}
</style>

        <div class="text-center">
                <img  src="~/images/Header.png" alt="Snow" style="width:100%;">
                <h4 >Добро пожаловать!</h4>
        </div>


<div class="container-fluid" style="margin: auto;">
  
  <div class="row justify-content-center">
    <div class="col-xs-1">
   
    </div>
    <div class="col-md-8">
         @foreach(var item in Model.HomePage)
         {
             <pre>
             </pre>
                <div class="Blocks">
                 
          <img src="~/images/@item.PictureUrl" class="image">
          <div class="main-text"><h3>@item.Name</h3></div>
          <div class="overlay">

                <p align="justify" style="width:350px;">
                    @item.Description   
                </p>
          </div>
        </div>
          }
    </div>
    <div class="col-xs-1">
 
    </div>
  </div>
</div>